<!-- app/views/home/index.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <title>PetPals - Home</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_importmap_tags %>
</head>
<body>
  <header>
    <div class="header-content">
      <h1>Welcome to PetPals</h1>
      <p>Your one-stop solution for finding and adopting pets from nearby shelters</p>
      <nav>
        <ul>
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'Pets', pets_path %></li>
          <li><%= link_to 'Shelters', shelters_path %></li>
          <li><%= link_to 'Users', users_path %></li>
        </ul>
      </nav>
    </div>
  </header>

  <main>
    <section id="featured-pets">
      <h2>Featured Pets</h2>
      <p>Discover some of our adorable pets waiting for their forever homes</p>
      <ul>
        <% @featured_pets.each do |pet| %>
          <li>
            <img src="<%= pet.photo_url %>" alt="<%= pet.name %>">
            <h3><%= pet.name %></h3>
            <p>Breed: <%= pet.breed %></p>
            <p>Age: <%= pet.age %> years old</p>
            <p><%= link_to 'More Info', pet_path(pet) %></p>
          </li>
        <% end %>
      </ul>
    </section>

    <section id="shelters">
      <h2>Our Shelters</h2>
      <p>Meet the shelters that are partnering with us to help these pets find homes</p>
      <ul>
        <% @shelters.each do |shelter| %>
          <li>
            <h3><%= shelter.name %></h3>
            <p>Location: <%= shelter.location %></p>
            <p>Contact Info: <%= shelter.contact_info %></p>
            <p><%= link_to 'Visit Website', shelter.website_url, target: "_blank" %></p>
          </li>
        <% end %>
      </ul>
    </section>

    <section id="users">
      <h2>Our Community</h2>
      <p>Get to know some of our active users who have adopted pets and are sharing their experiences</p>
      <ul>
        <% @users.each do |user| %>
          <li>
            <img src="<%= user.profile_photo %>" alt="<%= user.username %>">
            <h3><%= user.username %></h3>
            <p>Email: <%= user.email %></p>
          </li>
        <% end %>
      </ul>
    </section>
  </main>

  <footer>
    <div class="footer-content">
      <p>&copy; 2024 PetPals. All rights reserved.</p>
      <p>Follow us on 
        <a href="#">Facebook</a>, 
        <a href="#">Twitter</a>, 
        <a href="#">Instagram</a>
      </p>
    </div>
  </footer>
</body>
</html>

