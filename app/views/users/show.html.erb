<!-- app/views/users/show.html.erb -->
<h1><%= @user.new_username %>'s Profile</h1>

<p>
  <strong>Username:</strong>
  <%= @user.new_username %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @user.bio %>
</p>

<p>
  <strong>Profile Photo:</strong>
  <%= image_tag @user.profile_photo if @user.profile_photo.attached? %>
</p>
