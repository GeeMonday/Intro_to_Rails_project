<!DOCTYPE html>
<html>
<head>
  <title>DogPals</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" %>
  <%= javascript_include_tag "https://code.jquery.com/jquery-3.5.1.slim.min.js" %>
  <%= javascript_include_tag "https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" %>
  <%= javascript_include_tag "https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" %>
  <%= javascript_importmap_tags %>
</head>
<body class="bg-gray-100 text-gray-800">
  <header class="container my-4">
    <div class="row align-items-center">
      <div class="col-md-8">
        <h1 class="display-4 text-center text-md-left">
          <%= link_to 'DogPals', root_path, class: 'text-dark font-bold' %>
        </h1>
      </div>
      <div class="col-md-4 text-center text-md-right">
        <%= form_with(url: dogs_path, method: "get", class: "form-inline justify-center justify-md-end") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search dogs...", class: "form-control mr-2 mb-2 mb-md-0" %>
          <%= select_tag :shelter_id, options_from_collection_for_select(@shelters, :id, :name, params[:shelter_id]), include_blank: "Select Shelter", class: "form-control mr-2 mb-2 mb-md-0" %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <nav class="nav justify-content-center my-4">
      <%= link_to 'Home', root_path, class: 'nav-link' %>
      <%= link_to 'About', about_path, class: 'nav-link' %>
      <%= link_to 'Dogs', dogs_path, class: 'nav-link' %>
      <%= link_to 'Shelters', shelters_path, class: 'nav-link' %>
      <%= link_to 'Applications', applications_path, class: 'nav-link' %>
      <%= link_to 'Users', users_path, class: 'nav-link' %>
      <% if user_signed_in? %>
        <%= link_to 'Profile', user_path(current_user.id), class: 'nav-link' %>
        <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
      <% else %>
        <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
        <%= link_to 'Log In', new_user_session_path, class: 'nav-link' %>
      <% end %>
    </nav>
  </header>

  <div class="container">
    <p class="notice alert alert-info"><%= notice %></p>
    <p class="alert alert-danger"><%= alert %></p>

    <%= yield %>
  </div>

  <footer class="container my-4 text-center">
    <p>&copy; 2024 DogPals. All rights reserved.</p>
  </footer>
</body>
</html>




